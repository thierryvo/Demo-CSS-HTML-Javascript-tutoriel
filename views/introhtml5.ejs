  <!-- Formulaire de ssisie -->
  <section class="section-formulaire">
    <h2>Formulaire</h2>
    <form action="/test2/user/edit" method="post" name="form-saisie">
      <!-- nom  -->
      <label for="nom">Nom:</label>
      <input type="text" placeholder="Entrer vorte nom"
             id="nom">
      <!-- nombre / age   -->
      <br>
      <label for="age">Age:</label>
      <input type="number" placeholder="Entrer vorte age"
             id="age" min="0" max="99" step="1" value="18">
      <!-- sélecteur : input de type select   -->
      <!-- genre   -->
      <br>
      <label for="genre">Genre</label>
      <select name="genre" id="genre">
        <option value="homme">homme</option>
        <option selected value="femme">Femme</option>
        <option value="transgenre">Transgenre</option>
        <option value="société">Société</option>
      </select>
      <!-- boutons radios  les 3 relié par le name: Espèce ?   -->
      <!-- une seul sélection parmis les trois et le premier par défault: checked   -->
      <br>
      <div>
        <input name="espece" type="radio" id="humain" checked><label for="humain">Humain</label>
        <input name="espece" type="radio" id="extraterrestre"><label for="extraterrestre">extraterrestre</label>
        <input name="espece" type="radio" id="animal"><label for="animal">animal</label>
      </div>
      <!-- case à cocher checkbox (ici le label Englobe toujour la checkbox)  -->
      <br>
      <label><input type="checkbox" />Accepter les CGV</label>
      

      <!-- zone de texte textarea   -->
      <br>
      <textarea name="detail" id="detail" cols="40" rows="3"></textarea>

      <!-- mot de passe  -->
      <br>
      <label for="password">mot de passe</label>
      <input type="password" id="password" placeholder="password">

      <br>
      <!-- bouton Envoyer le formulaire  -->
      <!-- <input type="submit" value="ENVOYER">   -->
      <button type="submit">ENVOYER</button>
      <br><br>
    </form>
  </section>

