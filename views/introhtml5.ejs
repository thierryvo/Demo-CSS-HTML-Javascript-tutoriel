        <tr>
          <th scope="col">NOM</th>
          <th scope="col">PRENOM</th>          
          <th scope="col">ID</th>
        </tr>
      </thead>
      <!-- lignes du tableau -->
      <tbody>
        <!-- BOUCLE lignes du tableau --------------------------------------------------------- -->
        <% tabUsers.forEach(itemUser => { %>
          <tr class="align-middle">
            <!-- 3 premières colonnes  -->
            <td><%= itemUser.nom %></td>
            <td><%= itemUser.prenom %></td>            
            <td><%= itemUser.id %></td>
